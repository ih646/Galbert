<p class="lead">See Reviews for this course</p>
<script type="text/javascript" src='/post.js'></script>

<table class="table">
	<thead>
		<th>instructor</th>
		<th>Course</th>
		<th>Title</th>
		<th>credit</th>
		<th>term</th>
		<th>year </th>
		<th>schedule</th>
	</thead>
	<tbody>
		<tr>
			<td><a href='https://gallatin.nyu.edu{{link}}'>{{instructor}}</a></td>	
			<td>{{course.course}}</td>	
			<td>{{course.title}}</td>
			<td>{{course.credit}}</td>	
			<td>{{course.term}}</td>
			<td>{{course.year}}</td>
			{{#if course.days}}
				<td>{{course.days}},{{course.times}}</td>
			{{else}}
				<td>TBD</td>
			{{/if}}

		</tr>		
	</tbody>
</table>

<p>description: {{course.description}}</p></br>

<h2> All Reviews </h2>
<table id = "review-table" class = "table">
	<thead>
		<th>user</th>
		<th>instructor</th>
		<th>description</th>
		<th>score</th>
	</thead>
	<tbody>
		{{#each reviews}}
		<tr>
			<td>{{this.user}}</th>
			<td>{{this.instructor}}</td>
			<td>{{this.description}}</td>
			<td class ='reviewScore'>{{this.score}}</td>
		</tr>	
		{{/each}}
	</tbody>
</table><br>

{{#if average}}

<p  class = "lead" id ='average'> The average rating is: <em>{{average}}</em> </p>
{{else}}
<p  class = "lead" id ='average'> No reviews yet</p>
{{/if}}

{{#if user}}
	<h2> Post Your own Review</h2><br>
	<form action = "/reviews/post" method = POST id = 'post'>
		<input name="title" type = "hidden" value="{{course.title}}" id='title'>
		<input name="id" type = "hidden" value="{{course.course}}" id = 'courseNum'>	

	<div class = "form-group">
		Thoughts on instructor:<br>
		<textarea class="form-control" name ="instructor" id = 'instructor' rows="3"></textarea><br>
	</div>	
	<div class = "form-group" >	
		Thoughts on course:<br>	
		<textarea class="form-control" name ="description" id = 'description' rows="3"></textarea><br>
	</div>	
	<div class = "form-group">	
		Overall:<br><select name="score" class="input-lg" type="number" id = 'score' >
				<option></option>
				<option value="1">1 :Very Bad</option>
				<option value="2">2 :Bad</option>
				<option value="3">3 :Satisfactory</option>
				<option value="4">4 :Good</option>
				<option value="5">5 :Very Good</option>
			</select><br>
	</div>		
		<input type = "submit" class="btn btn-default" id = 'addReview'>		
	</form>	
{{else}}
	<p> <a href="/login"> Sign in</a> to post your own review <p>
{{/if}}



